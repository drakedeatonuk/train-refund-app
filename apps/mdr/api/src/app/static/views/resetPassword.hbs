<html>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>My Delay Repay - Reset Password</title>
    <script src='https://cdn.tailwindcss.com'></script>
  </head>
  <style>
    #password { background-image: none !important; } #password:focus { outline: 2px solid #08c277 !important; } .disabled {
    background-color:#86E0BC !important; color: #FFFFFF !important; }
  </style>
  <body
    marginheight='0'
    topmargin='0'
    marginwidth='0'
    style='margin: 0px; background-color: #f7f7f7;'
    leftmargin='0'
    style="@import url(https://fonts.googleapis.com/css?family=Rubik:300,400,500,700|Open+Sans:300,400,600,700); font-family: 'Open Sans', sans-serif;"
  >
    <table
      width='95%'
      border='0'
      align='center'
      cellpadding='0'
      cellspacing='0'
      style='margin-top: 50px; max-width:670px;background:#fff; border-radius:3px; text-align:center;-webkit-box-shadow:0 6px 18px 0 rgba(0,0,0,.06);-moz-box-shadow:0 6px 18px 0 rgba(0,0,0,.06);box-shadow:0 6px 18px 0 rgba(0,0,0,.06);'
    >
      <tr>
        <td style='height:40px;'>&nbsp;</td>
      </tr>
      <tr>
        <td style='padding:0 35px'>
          <form method='POST' action='{{link}}' style='height:100%; width: 100%; display:flex; flex-direction:column; align-items:center;'>
            <h1 style="color:#1e1e2d; font-weight:500; margin:0;font-size:32px;font-family:'Rubik',sans-serif; width: 100%">
              My Delay Repay Password Reset
            </h1>
            <span
              style='display:inline-block; vertical-align:middle; margin:29px 0 26px; border-bottom:1px solid #eff1f5; width:90%;'
            ></span>
            <p style='color:#455056; font-size:15px;line-height:24px; margin:0;'>
              To reset the password for
              <strong>{{email}}</strong>, please submit a new password below that's more than 6 characters long.
            </p>
            <input
              id='password'
              name='password'
              type='password'
              style='font-weight:500; margin-top:35px; font-size:14px;padding:10px 24px;display:inline-block;border-radius:50px; border: 1px solid #eff1f5; background-color:#f7f7f7; background-image: none;'
            />
            <button
              type='submit'
              id='password-submit'
              disabled='true'
              class='disabled'
              href='javascript:void(0);'
              style='background:#08c277;text-decoration:none !important; font-weight:500; margin-top:35px; color:#eff1f5;text-transform:uppercase; font-size:14px;padding:10px 24px;display:inline-block;border-radius:50px; border-width: 0; border-color:#08c277'
            >
              Submit
            </button>
          </form>
        </td>
      </tr>
      <tr>
        <td style='height:40px;'>&nbsp;</td>
      </tr>
    </table>

    <script>
      function watchInput() {
        document.getElementById('password').addEventListener('input', function(e, d) {
          if (e.target.value.length > 6 && e.target.value.length < 50) {
            document.getElementById('password-submit').removeAttribute("disabled");
            document.getElementById('password-submit').classList.remove("disabled");
          } else {
            let a = document.getElementById('password-submit').classList.contains('disabled');
            if (!document.getElementById('password-submit').classList.contains('disabled')) {
              document.getElementById('password-submit').setAttribute("disabled", true);
              document.getElementById('password-submit').className += "disabled";
            }
          };
        })
      };
      window.onload = watchInput();
    </script>
  </body>
</html>
